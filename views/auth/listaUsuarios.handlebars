<div class="content p-1">
    <div class="">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Usuários</h2>
            </div>
        </div>
        <hr>
        {{>_msg}}

        <div class="table-responsive">
            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>E-mail</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each usuarios}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                        <td class="text-center">
                            <span class="d-none d-md-block">
                                
                                <a href="/registrar/{{this.id}}" class="btn btn-outline-warning btn-sm">Editar</a>
                                <a href="/deletar/{{this.id}}" class="btn btn-outline-danger btn-sm apagar_rg" data-confirm="Tem certeza que deseja apagar o item selecionado?">Apagar</a>
                            </span>
                            <div class="dropdown d-block d-md-none">
                                <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Ações
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">                                   
                                    <a class="dropdown-item" href="/registrar/{{this.id}}">Editar</a>
                                    <a class="dropdown-item" href="/deletar/{{this.id}}" data-confirm="Tem certeza que deseja apagar o item selecionado?">Apagar</a>
                                </div>
                                
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>